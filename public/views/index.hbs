<h1 class="big">Meet the Herd</h1>

<ul class="list">
  {{#each horses}}
  <li class="list-item col-1-2 " id="{{this.id}}">
    <a class="big fancy-text light-link" href="/horses/{{this.id}}">{{this.name}}</a>
    <br>
    {{!-- <div class="statics" data-id="1"></div> --}}
  </li>
  {{/each}}
</ul>

<div id="uniqueDiv">
  <form class="flex flex-column" method="GET" action="/horses/new" id="formInCreateNewHorses">
    <button type="submit" class="button dark">Add a Horse</button>
  </form>
</div>
