<centre>
  <h1 class="course-heading display-4">Все лекции:</h1>
</centre>

{{#if isLoggedin}}
<form action="/addCourse" method="GET">
  <input type="submit" value="Создать новый курс">
</form>


{{#each courses}}
<a href="/{{this.title}}/course">{{this.title}}</a>

<form action="/delete/{{this.title}}" method="GET">
  <input type="submit" value="Удалить">
</form>

<form action="/{{this.title}}/course" method="GET">
  <input type="submit" value="Изменить">
</form>
{{!-- 
<p>Average Score: {{averageScore}}</p>
<p>Total reviews: {{totalReviews}}</p> --}}
<p>Средняя статистика: {{totalReviews}}</p>

<br>
{{/each}}

{{else}}

{{#each courses}}
<a href="/{{this.title}}/course">{{this.title}}</a>
<br>
{{/each}}
{{/if}}
{{#if isLoggedin}}
<a href="/exit">Выход из аккаунта</a>
{{/if}}
